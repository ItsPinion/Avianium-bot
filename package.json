{
  "name": "chirpy-the-discord-bot",
  "version": "0.4.0",
  "description": "A all in one discord bot. It has AI, economy, confession, welcome message/role and many discord utilities.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npx nodemon -e ts -x 'npm run build; node .'",
    "build": "rm -rf dist; tsc; npm run deploy",
    "deploy": "node dist/deploy-commands.js",
    "start": "node .",
    "reboot": "rm -rf dist",
    "db:migrate": "npx drizzle-kit generate:sqlite",
    "db:push": "npx drizzle-kit push:sqlite"
  },
  "keywords": [],
  "author": "ItsPinion",
  "license": "ISC",
  "dependencies": {
    "@discordjs/builders": "^1.7.0",
    "@discordjs/rest": "^2.0.0",
    "@google/generative-ai": "^0.3.1",
    "@libsql/client": "^0.5.6",
    "@types/node-fetch": "^2.6.11",
    "chalk": "^5.3.0",
    "content-checker": "^1.0.9",
    "discord-api-types": "^0.37.75",
    "discord.js": "^14.12.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.4",
    "googleapis": "^134.0.0",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "typescript": "^5.4.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/node-cron": "^3.0.11",
    "drizzle-kit": "^0.20.14",
    "nodemon": "^3.1.0",
    "tsx": "^4.7.1"
  }
}